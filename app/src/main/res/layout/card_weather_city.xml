<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_weather_city_bg"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="3dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/card_weather_city_city"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_weather_city_subtext"
                android:textColor="#000" />
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/card_weather_city_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"

            android:textSize="40sp"


            android:id="@+id/card_weather_city_tmp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/card_weather_city_weather" />

    </RelativeLayout>
</android.support.v7.widget.CardView>